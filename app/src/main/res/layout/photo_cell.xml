<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/photo_card_view_margin"
                                    cardview:cardCornerRadius="@dimen/photo_card_corner_radius"
                                    cardview:cardElevation="@dimen/photo_card_corner_radius"
                                    cardview:contentPadding="@dimen/photo_card_corner_radius"
                                    cardview:cardMaxElevation="@dimen/photo_card_corner_radius"

    >

    <ImageView
        android:id="@id/photo_id"
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_width"
        android:contentDescription="@string/photo"
        android:layout_gravity="center"
        android:gravity="center"
        />

</android.support.v7.widget.CardView>